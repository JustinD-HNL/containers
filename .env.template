# Buildkite Agent Configuration
# Copy this file to .env and fill in your values

# REQUIRED: Your Buildkite agent token from https://buildkite.com/organizations/YOUR_ORG/agents
BUILDKITE_AGENT_TOKEN=your_buildkite_agent_token_here

# OPTIONAL: Agent configuration
BUILDKITE_AGENT_NAME=buildkite-agent-docker
BUILDKITE_AGENT_TAGS=queue=default,os=linux,docker=true,environment=production
BUILDKITE_AGENT_PRIORITY=

# OPTIONAL: Docker registry credentials (for private images)
DOCKER_REGISTRY_URL=
DOCKER_REGISTRY_USERNAME=
DOCKER_REGISTRY_PASSWORD=

# OPTIONAL: Docker Hub credentials
DOCKER_HUB_USERNAME=
DOCKER_HUB_PASSWORD=

# OPTIONAL: AWS credentials (for ECR)
AWS_ACCOUNT_ID=
AWS_DEFAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# OPTIONAL: Google Cloud credentials (for GCR)
GOOGLE_APPLICATION_CREDENTIALS=

# OPTIONAL: Build configuration
BUILDKITE_CLEAN_CHECKOUT=false
BUILDKITE_DOCKER_CLEANUP=true
BUILDKITE_DOCKER_CLEANUP_VOLUMES=false
BUILDKITE_DOCKER_CLEANUP_NETWORKS=false
BUILDKITE_ARCHIVE_LOGS_ON_FAILURE=true

# OPTIONAL: Resource limits
MEMORY_LIMIT=2G
CPU_LIMIT=1.0
MEMORY_RESERVATION=512M
CPU_RESERVATION=0.25

# OPTIONAL: Timezone
TZ=UTC

# OPTIONAL: Node.js configuration
NODE_ENV=production

# OPTIONAL: Docker registry for pushing images
DOCKER_REGISTRY=
IMAGE_PREFIX=